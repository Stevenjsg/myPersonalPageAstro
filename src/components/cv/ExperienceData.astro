---
const { work } = Astro.props;
---

<article
  class="border border-white/20 rounded-2xl p-6 bg-black text-white shadow-[0_2px_12px_rgba(255,255,255,0.05)] min-h-[212px]"
>
  <h3 class="text-xl font-semibold mb-4 font-serif">Experiencia Laboral</h3>
  <ul class="space-y-4">
    {
      work.map((job) => (
        <li class="border-l-4 border-white/20 pl-4">
          <h4 class="text-lg font-bold">
            {job.position} en {job.name}
          </h4>
          <p class="text-sm italic mb-1 text-gray-300">
            {job.startDate} â€“ {job.endDate}
          </p>
          <p class="text-sm mb-2">{job.summary}</p>
          <ul class="list-disc list-inside text-sm text-gray-400">
            {job.highlights.map((point) => (
              <li>{point}</li>
            ))}
          </ul>
        </li>
      ))
    }
  </ul>
</article>
