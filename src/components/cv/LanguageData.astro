---
const { languages } = Astro.props;
---

<article
  class="border border-white/20 rounded-2xl p-6 bg-black text-white shadow-[0_2px_12px_rgba(255,255,255,0.05)] min-h-[200px]"
>
  <h3 class="text-xl font-semibold mb-4 font-serif">Idiomas</h3>
  <ul class="space-y-2">
    {
      languages.map((lang) => (
        <li class="flex justify-between items-center border-b border-gray-700 pb-1">
          <span class="text-sm font-medium">{lang.language}</span>
          <span class="text-sm italic text-gray-300">{lang.fluency}</span>
        </li>
      ))
    }
  </ul>
</article>
