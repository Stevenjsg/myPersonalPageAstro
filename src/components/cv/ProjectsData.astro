---
const { projects } = Astro.props;
---

<article
  class="border border-white/20 rounded-2xl p-6 bg-black text-white shadow-[0_2px_12px_rgba(255,255,255,0.05)] min-h-[200px]"
>
  <h3 class="text-xl font-semibold mb-4 font-serif">Proyectos</h3>
  <ul class="space-y-4">
    {
      projects.map((project) => (
        <li class="border-l-4 border-white/20 pl-4">
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-lg font-bold hover:underline"
          >
            {project.name}
          </a>
          <p class="text-sm italic mb-1 text-gray-300">
            {project.startDate} â€“ {project.endDate}
          </p>
          <p class="text-sm mb-2">{project.description}</p>
          <ul class="list-disc list-inside text-sm text-gray-400">
            {project.highlights.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </li>
      ))
    }
  </ul>
</article>
