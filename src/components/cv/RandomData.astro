---
import type { Interest } from "../../data/dataTypes";

const { interests } = Astro.props;
---

<article
  class="border border-[rgba(0,0,0,0.04)] dark:border-white/10
  rounded-3xl p-6
  bg-white/70 dark:bg-white/10
  backdrop-blur-xl
  text-black dark:text-white
  shadow-[0_6px_20px_rgba(0,0,0,0.12)] dark:shadow-[0_8px_32px_rgba(25,30,55,0.80)]
  min-h-[200px] max-w-full
  transition-all duration-300 ease-in-out
  hover:shadow-lg
  hover:bg-white/20 dark:hover:bg-neutral-800/20
  dark:hover:ring dark:hover:ring-blue-500/20"
>
  <h3 class="text-xl font-semibold mb-4 font-serif">Intereses</h3>
  <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
    {
      interests.map((interest: Interest) => (
        <div>
          <div class="text-xs text-zinc-500 font-medium mb-1">
            {interest.name}
          </div>
          <div class="flex flex-wrap gap-1">
            {interest.keywords.map((kw) => (
              <span class="bg-zinc-100 text-zinc-600 dark:bg-zinc-700 dark:text-white text-xs px-2 py-1 rounded-full shadow-sm border border-zinc-200 dark:border-zinc-700">
                {kw}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</article>
